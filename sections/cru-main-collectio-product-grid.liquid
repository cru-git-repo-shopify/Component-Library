  "settings": [
    {
      "type": "number",
      "id": "products_per_page",
      "label": "Products per page",
      "default": 12
    }
  ],
  "presets": [
    {
        "name": "CRU Product Collection",
        "category": "Custom"
    }
  ]
}
{% endschema %}