{%  if section.settings.is_reversed %}
    <div class="cru-2-col col-reversed {{ section.settings.class }}" id="{{ section.settings.id }}">
{% else %}
    <div class="cru-2-col {{ section.settings.class }}" id="{{ section.settings.id }}">
{% endif %}
    {% for block in section.blocks %}
      {% if block.type == 'text_column' %}
        <div class="text-column">
            <div class="text-col-inner">
                <h2>{{ block.settings.heading }}</h2>
                <p>{{ block.settings.column_content }}</p>
                {% if block.settings.bottom_image %}
                  <img src="{{ block.settings.bottom_image | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
                {% endif %}
                {% if block.settings.show_button %}
                    <a href="{{ block.settings.button_link }}" class="btn">{{ block.settings.button_text }}</a>
                {% endif %}
            </div>
        </div>
      {% else %}
        {% if block.settings.type == 'single' %}
          <div class="image-column">
            <img src="{{ block.settings.image_1 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
          </div>
        {% endif %}
        {% if block.settings.type == 'slider' %}
            <div class="image-column">
              <div class="slider">
              {% if block.settings.image_1 %}
                <img src="{{ block.settings.image_1 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
              {% endif %}
              {% if block.settings.image_2 %}
                <img src="{{ block.settings.image_2 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
              {% endif %}
              {% if block.settings.image_3 %}
                <img src="{{ block.settings.image_3 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
              {% endif %}
              {% if block.settings.image_4 %}
                <img src="{{ block.settings.image_4 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
              {% endif %}
              {% if block.settings.image_5 %}
                <img src="{{ block.settings.image_5 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endif %}
  {% endfor %}
</div>
{% schema  %}
    {
  "name": "CRU 2 Column",
  "settings": [
    {
      "type": "header",
      "content": "CRU 2 Column Settings"
    },
    {   
      "type": "text",
      "id": "class",
      "label": "Section Class"
    },
    {
      "type": "text",
      "id": "id",
      "label": "Section ID"
    },
    {
        "type": "checkbox",
        "id": "is_reversed",
        "label": "Reverse Columns",
        "default": false
    }
  ],
  "blocks": [
    {
      "type": "text_column",
      "name": "Text Column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "column_content",
          "label": "Column Content",
          "default": "<p>Column Content</p>"
        },
        {
          "type": "image_picker",
          "id": "bottom_image",
          "label": "Text Bottom Image"
        },
        {
            "type": "checkbox",
            "id": "show_button",
            "label": "Show Button",
            "default": true
        },
        {
            "type": "text",
            "id": "button_link",
            "label": "Button Link",
            "default": "https://example.com"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Learn More"
        }
      ]
    },
    {
      "type": "image_column",
      "name": "Image Column",
      "settings": [
        {
          "type": "select",
          "id": "type",
          "label": "Type",
          "options": [
            {
              "value": "single",
              "label": "Single Image"
            },
            {
              "value": "slider",
              "label": "Image Slider"
            }
          ],
          "default": "single"
        },
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Image 1"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Image 2"
        },
        {
          "type": "image_picker",
          "id": "image_3",
          "label": "Image 3"
        },
        {
          "type": "image_picker",
          "id": "image_4",
          "label": "Image 4"
        },
        {
          "type": "image_picker",
          "id": "image_5",
          "label": "Image 5"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image Alt Text",
          "default": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CRU 2 Column",
      "category": "Custom"
    }
  ]
}
{% endschema %}